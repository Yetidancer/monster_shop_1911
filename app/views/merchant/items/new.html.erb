<h1>Create New Item For <%=link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>

<center>
  <%= form_tag "/merchant/items", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>

    <%= label_tag :description %>
    <%= text_field_tag :description, params[:description] %>

    <%= label_tag :price %>
    <%= text_field_tag :price, params[:price] %>

    <%= label_tag :image %>
    <%= text_field_tag :image, params[:image] %>

    <%= label_tag :inventory %>
    <%= text_field_tag :inventory, params[:inventory] %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</center>
