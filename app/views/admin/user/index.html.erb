<h1 align = "center">Users</h1>
<section class = "grid-container">
  <% @users.each do |user|%>
    <section id="user-<%= user.id %>">
      <h2><%= link_to user.name, "/admin/users/#{user.id}" %></h2>
      <p>Registered On: <%= user.created_at %></p>
      <p>Role: <%= user.role %></p>
    </section>
  <% end %>
</section>
