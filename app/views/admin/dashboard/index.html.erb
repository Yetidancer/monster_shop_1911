<h1>Admin Dashboard</h1>
<h2>Orders:</h2>

<h3>Packaged:</h3>
<% @orders.each do |order| %>
  <section id="packaged-<%= order.id %>">
    <% if order.status == "packaged" %>
      <p>Order placed by: <%=link_to order.user.name, "/admin/users/#{order.user.id}"%></p>
      <p>Order ID: <%= order.id %></p>
      <p>Created: <%= order.created_at %></p>
    <% end %>
  </section>
<% end %>

