<%= form_tag path, method: method do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, name, required: true %>
  
  <%= label_tag :address %>
  <%= text_field_tag :address, address, required: true %>
  
  <%= label_tag :city %>
  <%= text_field_tag :city, city, required: true %>
  
  <%= label_tag :state %>
  <%= text_field_tag :state, state, required: true %>
  
  <%= label_tag "Zip Code" %>
  <%= text_field_tag :zip_code, zip_code, required: true %>
  
  <%= label_tag "Email Address" %>
  <%= text_field_tag :email_address, email_address, required: true %>
  
  <%= label_tag :password %>
  <%= text_field_tag :password %>
  
  <%= label_tag "Confirm Password" %>
  <%= text_field_tag :confirm_password %>

  <%= submit_tag button_text %>
<% end %>